{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react-native",
        "lib": [
            "dom",
            "esnext"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "modules/*": [
                "src/modules/*"
            ],
            "screens/*": [
                "src/screens/*"
            ],
            "locales/*": [
                "src/locales/*"
            ]
        }
    }
}
